<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Temporarily simulate an inner build until cross-targeting support for VS is checked in. This needs to be
       above the import of the props because the SDK.props will only get imported if the TargetFramework is set.-->
  <PropertyGroup>
    <TargetFramework>$if$ ($context$ == WebCore)netcoreapp1.0$else$$netframeworkversion$$endif$</TargetFramework>
  </PropertyGroup>

  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>$if$ ($context$ == WebCore)netcoreapp1.0$else$$netframeworkversion$$endif$</TargetFrameworks>
    <PreserveCompilationContext>true</PreserveCompilationContext>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="$(GlobalExclude)" />
    <EmbeddedResource Include="**\*.resx" Exclude="$(GlobalExclude)" />
  </ItemGroup>

  <ItemGroup>$if$ ($context$ == WebCore)
    <PackageReference Include="Microsoft.NETCore.App">
      <Version>__NetCorePlatformVersion__</Version>
    </PackageReference>$endif$
    <PackageReference Include="Microsoft.NET.Sdk.Web">
      <Version>__NetSdkVersion__</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics">
      <Version>__AspNetCoreReleasePackageVersion__</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Server.IISIntegration">
      <Version>__AspNetCoreReleasePackageVersion__</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel">
      <Version>__AspNetCorePatchPackageVersion__</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Logging.Console">
      <Version>__AspNetCoreReleasePackageVersion__</Version>
    </PackageReference>
  </ItemGroup>

$packagereferenceslist$
  <!--
    "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true
  },
    "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },
    "publishOptions": {
    "include": [
      "wwwroot",
      "**/*.cshtml",
      "appsettings.json",
      "web.config"
    ]
  },
  -->

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
